/* 图片放大效果 */
.post-body img {
  transition: all 0.3s ease-in-out;
}
.post-body img:hover {
  transform: scale(1.05);
}

/* 链接下划线动画 */
.post-body a {
  position: relative;
  text-decoration: none;
}
.post-body a::after {
  content: '';
  position: absolute;
  width: 0;
  height: 2px;
  bottom: 0;
  left: 0;
  background-color: #0066cc;
  transition: width 0.3s ease-in-out;
}
.post-body a:hover::after {
  width: 100%;
}

// 侧边栏链接呼吸效果
.sidebar-nav-item {
  position: relative;
  &::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.05);
    border-radius: 4px;
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }
  &:hover::before {
    transform: scaleX(1);
  }
}

// 按钮点击波纹效果
.post-button .btn {
  position: relative;
  overflow: hidden;
  &::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 5px;
    height: 5px;
    background: rgba(255,255,255,0.5);
    opacity: 0;
    border-radius: 100%;
    transform: scale(1, 1) translate(-50%);
    transform-origin: 50% 50%;
  }
  &:active::after {
    animation: ripple 1s ease-out;
  }
}

@keyframes ripple {
  0% {
    transform: scale(0, 0);
    opacity: 0.5;
  }
  100% {
    transform: scale(100, 100);
    opacity: 0;
  }
}

// 图片放大效果（带过渡）
.post-body img {
  transition: transform 0.3s ease;
  &:hover {
    transform: scale(1.03);
  }
}

// 滚动进度条
body::-webkit-scrollbar {
  width: 8px;
