.cursor {
  width: 8px;
  height: 8px;
  background-color: #0073aa;
  border-radius: 50%;
  position: fixed;
  pointer-events: none;
  z-index: 99999;
  transition: transform 0.2s;
}

.cursor.active {
  transform: scale(0.5);
}

.cursor-follower {
  width: 24px;
  height: 24px;
  background-color: rgba(0, 115, 170, 0.3);
  border-radius: 50%;
  position: fixed;
  pointer-events: none;
  z-index: 99998;
  transition: transform 0.2s;
}

.cursor-follower.active {
  transform: scale(2);
}

// 让鼠标经过链接时有特效
a:hover ~ .cursor {
  transform: scale(1.5);
}

a:hover ~ .cursor-follower {
  transform: scale(0.3);
}

