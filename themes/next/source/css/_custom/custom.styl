.click-effect {
  position: fixed;
  pointer-events: none;
  animation: clickEffect 1s ease-out;
  display: block;
  z-index: 9999;
}

@keyframes clickEffect {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(2);
    opacity: 0;
  }
}

