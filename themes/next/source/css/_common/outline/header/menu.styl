// Menu
// --------------------------------------------------
.menu {
  margin: 0;
  padding: 1em 0;
  text-align: center;
}

.menu-item {
  display: inline-block;
  list-style: none;
  margin: 0 10px;

  +mobile() {
    display: block;
    margin-top: 10px;

    &.menu-item-search {
      display: none;
    }
  }

  a {
    border-bottom: 0;
    display: block;
    font-size: $font-size-smaller;
    transition: border-color $transition-ease;
    color: #FFFFFF;  /* 默认白色 */

    &:hover {
      background: transparent;
      color: #B088FF;  /* 只在悬停时变为紫色 */
    }

    &.menu-item-active {
      background: transparent;
      color: #FFFFFF;  /* 激活状态保持白色 */
    }
  }

  i[class^='fa'] {
    margin-right: 8px;
  }

  .badge {
    badge();
  }
}

if (hexo-config('motion.transition.menu_item')) {
  .use-motion .menu-item {
    visibility: hidden;
  }
}
